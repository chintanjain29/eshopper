{% assign collection = collections[section.settings.collection] %}

<div class="page-carousel2">
  9999999
  <div class="page-carousel">
    <h2>
      <span>{{ section.settings.title }}</span>
    </h2>
  </div>
123456
  <div class="product-test">
    <div
      class="grid slider product-grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down"
      role="list"
    >
    {%- for product in collection.products -%}
     
      <div class="grid__item">
        {% render 'card-product',
          card_product: product,
          media_aspect_ratio: section.settings.image_ratio,
          image_shape: section.settings.image_shape,
          show_secondary_image: section.settings.show_secondary_image,
          show_vendor: section.settings.show_vendor,
          show_rating: section.settings.show_rating,

        %}
      </div>
    {%- endfor -%}
  </div>
  </div>
</div>

{% schema %}
{
  "name": "Product Carousel",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Featured Collection",
      "label": "Title"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        { "value": "adapt", "label": "Adapt to image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ],
      "default": "adapt",
      "label": "Image ratio"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "Show secondary image on hover"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "Show product vendor"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "Show product rating"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": false,
      "label": "Enable quick add"
    }
  ],
  "presets": [
    {
      "name": "Product Carousel"
    }
  ]
}
{% endschema %}

<style>
  .page-carousel2 {
    margin: 50px auto;
    padding: 50px 0;
  }
  .page-carousel {
    text-align: center;
    padding: 0 10px;
    position: relative;
    margin-bottom: 30px;
  }
  .page-carousel span {
    position: relative;
    background: #fff;
    z-index: 1;
    padding: 0 15px;
  }
  .page-carousel:before {
    position: absolute;
    content: "";
    top: 50%;
    left: 0;
    right: 0;
    width: 100%;
    height: 2px;
    margin-top: -1px;
    background: #1C1C1C;
  }
  .product-carousel .slick-slide {
    padding: 0 10px;
  }
  .product-carousel .slick-prev,
  .product-carousel .slick-next {
    z-index: 1;
  }
  .product-carousel .slick-prev {
    left: -25px;
  }
  .product-carousel .slick-next {
    right: -25px;
  }
</style>
{% comment %} 
<script>
document.addEventListener('DOMContentLoaded', function() {
  $('.product-carousel').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    autoplay: true,
    autoplaySpeed: 3000,
    dots: true,
    arrows: true,
    responsive: [
      {
        breakpoint: 1024,
        settings: {
          slidesToShow: 3
        }
      },
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 2
        }
      },
      {
        breakpoint: 480,
        settings: {
          slidesToShow: 1
        }
      }
    ]
  });
});
</script> {% endcomment %}