{% layout 'page' %}
<div class="custom-container bg-secondary mb-5">
  <div class="custom-content">
    <h1 class="custom-heading">Contact Us</h1>
    <div class="custom-breadcrumb">
      <p>{% render 'breadcrumb' %}</p>
    </div>
  </div>
</div>

<div
  class="section-title"
>
  <h2>
    <span><b>Contact For Any Queries</b></span>
  </h2>
</div>

<div class="one">
  <div class="contact-page">
    <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form">
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="utf8" value="âœ“">

      <input
        type="text"
        id="ContactFormName"
        name="contact[name]"
        placeholder="Your name"
        autocapitalize="words"
        value=""
        required
      >

      <input
        type="email"
        id="ContactFormEmail"
        name="contact[email]"
        placeholder="your-email@example.com"
        autocorrect="off"
        autocapitalize="off"
        value=""
        required
      >

      <input
        type="tel"
        id="ContactFormPhone"
        name="contact[phone]"
        placeholder="Your phone number"
        pattern="[0-9\-]*"
        value=""
      >

      <textarea id="ContactFormMessage" name="contact[body]" placeholder="Your message" rows="10" required></textarea>

      <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">Send Message</button>
    </form>

    <div id="form-response"></div>
  </div>
  <div class="two">{% section 'contact' %}</div>
</div>

<style>
  .one {
    display: flex;
    justify-content: space-between; /* Changed from margin-left */
    padding: 0 100px 50px; /* Added horizontal padding */
  }
  
  .two {
    margin-left: 50px; /* Reduced from 150px */
  }
                    .contact-page {
                      max-width: 400px;
                      margin: 0 auto;
                    }
                    .contact-form label {
                      display: block;
                      margin-top: 20px;
                    }
                    .contact-form input, .contact-form textarea {
                      width: 100%;
                      padding: 12px; /* Increased from 10px */
                      margin-top: 10px;
                      border: 1px solid #ccc; /* Added border */
                      border-radius: 4px; /* Added border-radius */
                    }
                  .btn{
                    padding-top:1rem;
                    padding-bottom:1rem;
                    padding-right:2rem;
                    padding-left:2rem;
                  }

                      .btn {
                      display: inline-block;
                      font-weight: 400;
                      color: #6F6F6F;
                      text-align: center;
                      vertical-align: middle;
                      user-select: none;
                      background-color: transparent;
                      border: 1px solid transparent;
                      font-size: 1rem;
                      line-height: 1.5;
                      border-radius: 0;
                      transition: color 0.15s ease-in-out, background-color 0.15s ease-in-out, border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
                    }
                     .btn-primary {
                        color: #212529;
                        background-color: #D19C97;
                        border-color: #D19C97;
                      }

                    .btn-primary:hover {
                      color: #fff;
                      background-color: #c5837c;
                      order-color: #c17a74;
                      }

                    .btn-primary:focus, .btn-primary.focus {
                      color: #fff;
                      background-color: #c5837c;
                      border-color: #c17a74;
                      box-shadow: 0 0 0 0.2rem rgba(183, 138, 135, 0.5);
                      }

                    .btn-primary.disabled, .btn-primary:disabled {
                      color: #212529;
                      background-color: #D19C97;
                      border-color: #D19C97;
                      }

                    .btn-primary:not(:disabled):not(.disabled):active, .btn-primary:not(:disabled):not(.disabled).active,
                    .show > .btn-primary.dropdown-toggle {
                      color: #fff;
                      background-color: #c17a74;
                      border-color: #bd726b;
                      }

                    .btn-primary:not(:disabled):not(.disabled):active:focus, .btn-primary:not(:disabled):not(.disabled).active:focus,
                    .show > .btn-primary.dropdown-toggle:focus {
                      box-shadow: 0 0 0 0.2rem rgba(183, 138, 135, 0.5);
                      }


           .section-title {
            text-align: center;
            padding: 0 10px;
            position: relative; /* Ensure relative positioning for absolute element */
          }

        .section-title span {
          position: relative;
          background: #ffffff;
          z-index: 1;
        }
        .section-title::before {
        position: absolute;
        content: "";
        top: 50%;
        left: 35%;
        width: 30%;
        height: 2px;
        margin-top: -1px;
        background: #1C1C1C;
      }
  .custom-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 300px; /* Minimum height */
  }

  .custom-heading {
      font-weight: bold;
      text-transform: uppercase;
      margin-bottom: 1.5rem; /* Adjust margin bottom as needed */
  }

  .custom-breadcrumb {
      display: inline-flex;
  }

  .custom-breadcrumb a {
      text-decoration: none; /* Remove default underline */
      color: inherit; /* Inherit text color */
      transition: color 0.3s, border-bottom-color 0.3s; /* Smooth transition for color and underline */
  }

  .custom-breadcrumb a:hover {
      color: #D19C97; /* Change color on hover */
      border-bottom: 1px solid #D19C97; /* Underline on hover */
  }
</style>
<script>
    document.addEventListener("DOMContentLoaded", function() {
    const form = document.getElementById('contact_form');
    const responseDiv = document.getElementById('form-response');

    form.addEventListener('submit', function(event) {
      event.preventDefault();
      const formData = new FormData(form);

      fetch(form.action, {
        method: form.method,
        headers: {
          'Accept': 'application/json',
        },
        body: formData,
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          responseDiv.innerHTML = "<p>Thank you for your message! We'll get back to you soon.</p>";
          form.reset();
        } else {
          responseDiv.innerHTML = "<p>There was an error sending your message. Please try again later.</p>";
        }
      })
      .catch(error => {
        responseDiv.innerHTML = "<p>There was an error sending your message. Please try again later.</p>";
      });
    });
  });
</script>
