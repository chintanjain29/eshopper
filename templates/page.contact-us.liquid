{% layout 'page' %}
<div class="custom-container bg-secondary mb-5">
  <div class="custom-content">
    <h1 class="custom-heading">Contact Us</h1>
    <div class="custom-breadcrumb">
      <p>{% render 'breadcrumb' %}</p>
    </div>
  </div>
</div>

<div class="section-title">
  <h2>
    <span><b>Contact For Any Queries</b></span>
  </h2>
</div>

<div class="one">
  <div class="contact-page">
    <form method="post" action="/contact#contact_form" id="contact_form" accept-charset="UTF-8" class="contact-form">
      <input type="hidden" name="form_type" value="contact">
      <input type="hidden" name="utf8" value="âœ“">

      <input
        type="text"
        id="ContactFormName"
        name="contact[name]"
        placeholder="Your name"
        autocapitalize="words"
        value=""
        required
      >

      <input
        type="email"
        id="ContactFormEmail"
        name="contact[email]"
        placeholder="your-email@example.com"
        autocorrect="off"
        autocapitalize="off"
        value=""
        required
      >

      <input
        type="tel"
        id="ContactFormPhone"
        name="contact[phone]"
        placeholder="Your phone number"
        pattern="[0-9\-]*"
        value=""
      >

      <textarea id="ContactFormMessage" name="contact[body]" placeholder="Your message" rows="10" required></textarea>

      <button class="btn btn-primary py-2 px-4" type="submit" id="sendMessageButton">Send Message</button>
    </form>

    <div id="form-response"></div>
  </div>
  <div class="two">{% section 'contact' %}</div>
</div>

<style>
  .one {
  display: flex;
  justify-content: space-between;
  padding: 50px 100px;
  background-color: #f8f9fa;
  border-radius: 10px;
  box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
}

.two {
  margin-left: 50px;
  flex: 1;
}

.contact-page {
  max-width: 500px;
  width: 100%;
}

.contact-form label {
  display: block;
  margin-top: 20px;
  font-weight: 600;
  color: #333;
}

.contact-form input, .contact-form textarea {
  width: 100%;
  padding: 15px;
  margin-top: 10px;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 16px;
  transition: border-color 0.3s ease;
}

.contact-form input:focus, .contact-form textarea:focus {
  border-color: #D19C97;
  outline: none;
}

.btn {
  display: inline-block;
  font-weight: 600;
  color: #fff;
  text-align: center;
  vertical-align: middle;
  user-select: none;
  background-color: #D19C97;
  border: none;
  padding: 12px 25px;
  font-size: 16px;
  line-height: 1.5;
  border-radius: 5px;
  transition: all 0.3s ease;
  cursor: pointer;
  margin-top: 20px;
}

.btn:hover {
  background-color: #c5837c;
  transform: translateY(-2px);
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.section-title {
  text-align: center;
  padding: 30px 10px;
  position: relative;
  margin-bottom: 40px;
}

.section-title h2 {
  font-size: 32px;
  color: #333;
}

.section-title span {
  position: relative;
  background: #ffffff;
  padding: 0 20px;
  z-index: 1;
}

.section-title::before {
  position: absolute;
  content: "";
  top: 50%;
  left: 50%;
  width: 60%;
  height: 2px;
  background: #D19C97;
  transform: translate(-50%, -50%);
}

.custom-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 300px;
}

.custom-heading {
  font-weight: bold;
  text-transform: uppercase;
  margin-bottom: 1.5rem;
  font-size: 28px;
  color: #333;
}

.custom-breadcrumb {
  display: inline-flex;
  padding: 10px 20px;
  border-radius: 5px;
}

.custom-breadcrumb a {
  text-decoration: none;
  color: #666;
  transition: color 0.3s, border-bottom-color 0.3s;
  font-weight: 500;
}

.custom-breadcrumb a:hover {
  color: #D19C97;
  border-bottom: 1px solid #D19C97;
}
</style>
<script>
    document.addEventListener("DOMContentLoaded", function() {
    const form = document.getElementById('contact_form');
    const responseDiv = document.getElementById('form-response');

    form.addEventListener('submit', function(event) {
      event.preventDefault();
      const formData = new FormData(form);

      fetch(form.action, {
        method: form.method,
        headers: {
          'Accept': 'application/json',
        },
        body: formData,
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          responseDiv.innerHTML = "<p>Thank you for your message! We'll get back to you soon.</p>";
          form.reset();
        } else {
          responseDiv.innerHTML = "<p>There was an error sending your message. Please try again later.</p>";
        }
      })
      .catch(error => {
        responseDiv.innerHTML = "<p>There was an error sending your message. Please try again later.</p>";
      });
    });
  });
</script>
